<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="12dp">

	<LinearLayout
		android:id="@+id/llTeachers"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="24dp"
			android:layout_marginTop="12dp"
			android:contentDescription="@string/teachers"
			android:tint="@color/colorPrimary_text"
			app:srcCompat="@drawable/ic_teacher"/>

		<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingRight="12dp">

			<LinearLayout
				android:id="@+id/llTeacherList"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

			</LinearLayout>
		</HorizontalScrollView>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llClasses"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="24dp"
			android:layout_marginTop="12dp"
			android:contentDescription="@string/classes"
			android:tint="@color/colorPrimary_text"
			app:srcCompat="@drawable/ic_classes"/>

		<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingRight="12dp">

			<LinearLayout
				android:id="@+id/llClassList"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

			</LinearLayout>
		</HorizontalScrollView>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llRooms"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="24dp"
			android:layout_marginTop="12dp"
			android:contentDescription="@string/rooms"
			android:tint="@color/colorPrimary_text"
			app:srcCompat="@drawable/ic_rooms"/>

		<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingRight="12dp">

			<LinearLayout
				android:id="@+id/llRoomList"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

			</LinearLayout>
		</HorizontalScrollView>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llInfo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="12dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvInfo"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:drawableLeft="@drawable/ic_info"
			android:drawablePadding="24dp"
			android:drawableStart="@drawable/ic_info"
			android:drawableTint="@color/colorPrimary_text"
			android:gravity="center_vertical"
			android:padding="12dp"
			android:textColor="@color/colorPrimary_text"
			android:tint="@color/colorPrimary_text"
			tools:ignore="UnusedAttribute"/>

	</LinearLayout>

</LinearLayout>